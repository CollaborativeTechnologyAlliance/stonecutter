    .clj--flash-message-container.func--flash-message-container
      .flash-message.flash-message--success
        p.flash-message__title.clj--flash-message-text !Success Flash Message.

    h1(data-l8n="content:admin-user-list/page-title") !User list
    form(action="#", method="post", role="search")
      p.search-row.clj-wip
        label.search-row__label(for="search")
          i.fa.fa-search.search-row__icon
          span.visuallyhidden(data-l8n="content:admin-user-list/label-search")
            | !Search
        input.search-row__input(type="text", id="search", name="search", placeholder="")

