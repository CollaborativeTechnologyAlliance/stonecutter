extends layout/layout

block vars
  - bodyClass = ""
  - pageTitle = "!Authorise"
 // - pageTitleDataL8n = ""

block headerScripts

block content
  .middle-container
    h1.page-title
      span.clj-app-name Green Party Voting
      = " "
      | would like to use your Profile Card

    .authorise-text
      p.authorise-text__description
        | By sharing your Profile Card this application
        = " "
        span.authorise-text__description--allowed will be able to:
      ul.authorise-text__list
        li.authorise-text__item
          i.fa.fa-check.fa-fw.authorise-text__icon.authorise-text__icon--allowed
          = " "
          | Sign you in
        li.authorise-text__item
          i.fa.fa-check.fa-fw.authorise-text__icon.authorise-text__icon--allowed
          = " "
          | View your Profile Card

    .authorise-text
      p.authorise-text__description
        | This application
        = " "
        span.authorise-text__description--disallowed will not be able to:
      ul.authorise-text__list
        li.authorise-text__item
          i.fa.fa-times.fa-fw.authorise-text__icon.authorise-text__icon--disallowed
          = " "
          | Update your Profile Card

    .authorise-buttons
      .authorise-buttons__primary
        a.button.button--full-width.button--primary(href="#{demoAppURL}/authorise-success") Share Profile Card
      .authorise-buttons__secondary
        a.button.button--full-width.button--grey(href="#{demoAppURL}/authorise-fail") Cancel

    .authorise-terms
      p
        | You can unshare your Profile Card at anytime from your
        =" "
        span.authorise-terms__link profile
        ="."