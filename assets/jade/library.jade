extends layout/layout

block vars
  - bodyClass = "func--library-page"
  - pageTitle = "Library"
//  - pageTitleDataL8n = ""

block headerScripts
  style.
    .section {
      margin-bottom: 4rem;
    }
    .section-title {
      /*margin-top: 3rem;*/
    }
    .library-item {
      margin-bottom: 2rem;
    }
    .library-item:last-of-type {
      margin-bottom: 0;
    }


block content

  .middle-container

    .section
      h2.section-title Applications

      .library-item
        h3.library-title Empty
        .library__demo
          ul.app__list
            +authorisedAppItemEmpty()

      .library-item
        h3.library-title Populated
        .library__demo
          ul.app__list
            +authorisedAppItem("Green Party")

    .section
      h2.section-title Flash message

      .library-item
        h3.library-title Success
        .library__demo
          .flash-message.flash-message--success.clj--flash-message--success
            p.flash-message__title.clj--flash-message--success-title Your password was saved successfully.

      .library-item
        h3.library-title Fail
        .library__demo
          .flash-message.flash-message--fail.clj--flash-message--fail
            p.flash-message__title.clj--flash-message--fail-title
              | There was a problem saving your password.
              //-= " "
              //-a(href="#") Try again
