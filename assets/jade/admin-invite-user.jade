extends layout/layout

block vars
  - bodyClass = "func--admin-invite-user-page"
  - pageTitle = "!Sign in"
  - pageTitleDataL8n = "content:admin-invite-user/title"

block headerScripts

block headerContent
  include _admin_navigation

block content

  .single-column

    +flashMessageWithCljContainer('clj--flash-message-container','func--flash-message-container', 'success')
          p.flash-message__title
            span.clj--invited-email.func--invited-email !someone@somewhere.com
            = " "
            span.flash-message-text(data-l8n="content:admin-invite-user/invited-flash-success") !was successfully added

    h1.page-title(data-l8n="content:admin-invite-user/page-title")
      | !Invite a user
    form.login-form(action="./invite-sent", method="post", role="form")
      p.form-row.clj--invite-user-email
        label.form-row__label(for="email")
          span.form-row__title(data-l8n="content:admin-invite-user/email-address")
            | !Email address
          span.form-row__validation.clj--invite-user-email__validation(data-l8n="content:admin-invite-user/email-address-invalid-validation-message")
            | !Enter a valid email address
        input.form-row__input.clj--email__input.func--email__input(type="email", id="email", name="email")

      button.button.button--full-width-smallish-devices.func--invite-user__button(type="submit", data-l8n="content:admin-invite-user/invite-button")
        | !Invite
        
block footerScripts
