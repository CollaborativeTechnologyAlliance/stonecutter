extends layout/layout

block vars
  - bodyClass = ""
  - pageTitle = "!Sign in"
  - pageTitleDataL8n = "content:sign-in-form/title"

block headerScripts

block headerContent
  nav.tabs
    li.tabs__item.tabs__item--on: a.tabs__link(href="sign-in", data-l8n="content:sign-in-register/sign-in-tab")
      | !Sign in
    li.tabs__item: a.tabs__link(href="register", data-l8n="content:sign-in-register/register-tab")
      | !Register

block content
  .middle-container
    h1.page-title(data-l8n="content:sign-in-form/page-header")
      | !Sign in
    form.login-form(action="authorise", method="post")
      //-p.form-row.form-row--validation-error
      p.form-row
        label.form-row__label(for="email")
          span.form-row__title(data-l8n="content:sign-in-form/email-address")
            | !Email address
          span.form-row__validation(data-l8n="content:sign-in-form/email-address-invalid-validation-message")
            | !Enter a valid email address
        input.form-row__input.func--email__input(type="email", id="email", name="email")
      p.form-row
        label.form-row__label(for="password")
          span.form-row__title(data-l8n="content:sign-in-form/password")
            | !Password
          //-span.form-row__label__validation
            | !Cannot be blank
        input.form-row__input.func--password__input(type="password", id="password", name="password")
      button.button.button--full-width(type="submit", data-l8n="content:sign-in-form/sign-in")
        | !Sign in to Profile

block footerScripts
  if staticMode
    script.
      var form = document.getElementsByClassName('login-form')[0];
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        var formAction = form.getAttribute('action') + "?";
        window.location = formAction;
      });