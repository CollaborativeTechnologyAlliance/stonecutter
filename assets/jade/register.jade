extends layout/layout

block vars
  - bodyClass = ""

block title
  | Demo

block headerScripts

block content

  .middle-container
    nav.tabs
      li.tabs__item: a.tabs__item__link(href="/sign-in") Sign in
      li.tabs__item.tabs__item--on: a.tabs__item__link(href="/register") Register

    form.login-form(action="", method="")
      h1.page-title Register an account
      p.form-row
        label.form-row__label(for="email")
          span.form-row__label__title
            | Email address
          span.form-row__label__validation
            | Enter a valid email address
        input.form-row__input(type="email", id="email", name="email")
      p.form-row
        label.form-row__label(for="password")
          span.form-row__label__title
            | Password
        input.form-row__input(type="password", id="password", name="password")
      p.form-row
        label.form-row__label(for="confirm-password")
          span.form-row__label__title
            | Confirm Password
        input.form-row__input(type="password", id="confirm-password", name="confirm-password")
      button.button(type="submit") Create account