extends layout/layout-email

block vars
  - subjectTitle = "Hello World"

block inlineStyles
block inlineIE7Styles
block inlineOutlookStyles

block content
  table(width="100%", cellpadding="0", cellspacing="0", border="0", align="center")
    tr
      td(valign="top", style="vertical-align: top;")
        p(style="font-family:#{font_family}; font-size: 16px; color: #{basicTextColor}; margin: 0 0 16px 0;") Hi Chris
        p(style="font-family:#{font_family}; font-size: 16px; color: #{basicTextColor}; margin: 0 0 16px 0;") Click this link to confirm your email address:
        p(style="font-family:#{font_family}; font-size: 16px; color: #{basicTextColor}; margin: 0 0 16px 0;")
          a(href="#" style="font-family:#{font_family}; font-size: 16px; color: #{basicLinkColor};") http://www.linkgoeshere.com
        p(style="font-family:#{font_family}; font-size: 16px; color: #{basicTextColor}; margin: 0 0 16px 0;")
          br
          | Thanks
          br
          br
          | #{appName} Admin

block footerContent
  table
    tr
      td(style="font-family:#{font_family}; font-size: 10px; color: #{footerTextColor}; margin: 0;")
        | This was not me,
        = " "
        a(href="#", style="font-family:#{font_family}; font-size: 10px; color: #{basicLinkColor};") delete account
        = "."
